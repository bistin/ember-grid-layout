<GridLayout @layoutModel={{this.wrappedLayout}} @positionKey="position" @width={{this.width}} as |grid layoutModel|>
    {{#each layoutModel as |l index|}}
        <GridItem @grid={{grid}} @pos={{l}} @index={{index}} @handle=".dragHandle" as |gd|>
            <a class="dragHandle">handle</a>
            <button {{action gd.remove}}> X </button>
            <div key={{index}}>
                <span class="text">{{l.i}}</span>
                w={{l.w}}, h={{l.h}}
                x={{l.x}}, y={{l.y}}
            </div>
        </GridItem>
    {{/each}}
</GridLayout>
